{
  "expo": {
    "name": "ColorCoord",
    "slug": "color-coord",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "colorcoord",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.colorcoord.app",
      "infoPlist": {
        "NSCameraUsageDescription": "コーデ写真を撮影するためにカメラを使用します。",
        "NSPhotoLibraryUsageDescription": "コーデ画像を選択するために写真ライブラリへアクセスします。",
        "NSPhotoLibraryAddUsageDescription": "編集した画像を保存するために写真ライブラリへアクセスします。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.colorcoord.app",
      "permissions": ["CAMERA", "READ_MEDIA_IMAGES"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-asset",
      "expo-font"
    ]
  }
}
